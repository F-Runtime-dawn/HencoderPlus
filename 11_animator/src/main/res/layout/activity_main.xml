<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.hsicen.animator.CameraView
            android:id="@+id/cameraView"
            android:layout_width="match_parent"
            android:layout_height="350dp" />

        <Button
            android:id="@+id/cameraStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hsicen.animator.PointView
            android:id="@+id/pointView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/pointStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.hsicen.animator.ProvinceView
            android:id="@+id/provinceView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/provinceStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.hsicen.animator.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="姓名"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rengwuxian="true"
            app:useFloatingLabel="true" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
